<UserControl x:Class="ERPTestingApp.Views.Masters.VAMasterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#BDC3C7" BorderThickness="1" Padding="15" Background="White" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <StackPanel VerticalAlignment="Center">
                    <Label Content="VA Name" FontWeight="Bold"/>
                    <TextBox Text="{Binding VAName, UpdateSourceTrigger=PropertyChanged}" Width="200" Height="30"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="20,0,0,0">
                    <Button Content="âž• Add" Command="{Binding AddCommand}" Background="#28A745" Foreground="White" Width="80" 
                            Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                    <Button Content="ðŸ’¾ Update" Command="{Binding UpdateCommand}" Background="#007BFF" Foreground="White" Width="80" 
                            Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Button Content="âŒ Cancel" Command="{Binding CancelCommand}" Background="#6C757D" Foreground="White" Width="80" 
                            Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="1" ItemsSource="{Binding VAs}" SelectedItem="{Binding SelectedVA}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="VA Name" Binding="{Binding VAName}" Width="*"/>
                <DataGridTextColumn Header="Created By" Binding="{Binding Username}" Width="150"/>
                <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDateTime, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="150"/>
                <DataGridTemplateColumn Header="Actions" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="âœï¸ Edit" Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" Background="#FFC107" Margin="2"/>
                                <Button Content="ðŸ—‘ï¸ Delete" Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" Background="#DC3545" Foreground="White" Margin="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
