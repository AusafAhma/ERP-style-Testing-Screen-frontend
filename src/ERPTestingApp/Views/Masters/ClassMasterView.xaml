<UserControl x:Class="ERPTestingApp.Views.Masters.ClassMasterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Form Section -->
        <Border Grid.Row="0" BorderBrush="#BDC3C7" BorderThickness="1" Padding="15" Background="White" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Content="Class Name" FontWeight="Bold"/>
                    <TextBox Text="{Binding ClassName, UpdateSourceTrigger=PropertyChanged}" 
                            Width="300" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="âž• Add" Command="{Binding AddCommand}" 
                           Background="#28A745" Foreground="White" Width="80"
                           Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Button Content="ðŸ’¾ Update" Command="{Binding UpdateCommand}" 
                           Background="#007BFF" Foreground="White" Width="80"
                           Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Button Content="âŒ Cancel" Command="{Binding CancelCommand}" 
                           Background="#6C757D" Foreground="White" Width="80"
                           Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- List Section -->
        <Border Grid.Row="1" BorderBrush="#BDC3C7" BorderThickness="1" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#F8F9FA" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
                    <TextBlock Text="Class List" FontSize="14" FontWeight="Bold"/>
                </Border>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Classes}" 
                         SelectedItem="{Binding SelectedClass}"
                         AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Class Name" Binding="{Binding ClassName}" Width="*"/>
                        <DataGridTextColumn Header="Created By" Binding="{Binding Username}" Width="150"/>
                        <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDateTime, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="180"/>
                        <DataGridTemplateColumn Header="Actions" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="âœï¸ Edit" Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                               Background="#FFC107" Foreground="Black" Margin="2" Padding="5,2"/>
                                        <Button Content="ðŸ—‘ï¸ Delete" Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                               Background="#DC3545" Foreground="White" Margin="2" Padding="5,2"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
